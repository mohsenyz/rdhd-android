<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="AppTheme.TextAppearance.TopSectionCaption" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.LinkbarSectionCaption" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ServiceItemCaption" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#666</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
