<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="AppTheme.TextAppearance.TopSectionCaption" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.CodeScannerDisplayName" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.DialogHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.LightDialogHeader" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.CardSelectId" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.BankName" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.TextAppearance.CardSelectIdDisabled" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.BankNameDisabled" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#eaeaea</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.AppbarTitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>





    <style name="AppTheme.TextAppearance.RequestDialogItem" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ServicePassedTitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ServicePassedCompany" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#555</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.TextAppearance.ServicePassedPrice" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.ServicePassedItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#777</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.TextAppearance.ServicePassedPriceUnit" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>




    <style name="AppTheme.TextAppearance.RequestDialogItemDisabled" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#eaeaea</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.NewCardFromTitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#297cde</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.NewCardFromValue" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#000</item>
    </style>




    <style name="AppTheme.TextAppearance.RequestDialogCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.SelectCardBtn" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#888</item>
        <item name="android:textStyle">bold</item>
    </style>






    <style name="AppTheme.TextAppearance.CodeScannerDisplayValue" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.TextAppearance.LinkbarSectionCaption" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ServiceItemCaption" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#666</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginCard" parent="parent"></style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.TextAppearance.BorderedBtn" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#fff</item>
    </style>


    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/primaryTextColor</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
